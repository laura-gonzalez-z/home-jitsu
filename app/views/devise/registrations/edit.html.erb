<h2><%= @message %></h2>
<%= link_to "Back", :back %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |field| %>
  <%= render partial: 'shared/form', locals: { field: field } %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
