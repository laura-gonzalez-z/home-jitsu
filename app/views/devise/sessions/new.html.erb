<div class="component-container">
  <div class="banner" style="background-image: linear-gradient(rgba(54,77,94,0.8),rgba(54,77,94,0.9)), url(<%= asset_path "jiu-jitsu-bg.jpg" %>);">
    <h1>Sign in to Home-Jitsu</h1>
  </div>
  <div class="form-box bg-white mt-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "Email",
                    label: false,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "Password",
                    label: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary d-block w-100" %>
      </div>
    <% end %>
  </div>
</div>
<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
