<h1><%= "#{@user.first_name} #{@user.last_name}â€™s reviews" %></h1>
<% @reviews.each do |review| %>
  <% user = User.find(review.writer_id) %>
  <p>Written by: <%= "#{user.first_name} #{user.last_name}" %></p>
  <p><%= review.content %></p>
  <p>Rating: <%= review.rating %></p>
  <hr>
<% end %>
<% @user.friends.select do |user| %>
  <% if user.id == current_user.id %>
    <%= link_to "Add review", new_user_review_path(@user), class: "btn btn-primary d-block" %>
  <% end %>
<% end %>
