<div class="container">
  <h1>Notification Center</h1>
  <% @notifications.each do |notification| %>
    <% if notification.unread? %>
      <% if notification.recipient == current_user || notification.params[:requester] %>
      <li><%= pp notification.params %></li>
      <% end %>
    <% end %>
  <% end %>
</div>
