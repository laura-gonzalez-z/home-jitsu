<%= simple_form_for(@event) do |f| %>
  <%= f.input :date, as: :datetime, html5: true %>
  <%= f.input :title %>
  <%= f.input :address,
              hint: "If it's not a real address it won't show in the search!" %>
  <%= f.input :description %>
  <%= f.input :status, collection: Event::STATUS %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
