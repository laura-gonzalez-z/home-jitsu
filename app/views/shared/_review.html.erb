<% user = User.find(review.writer_id) %>
<div class="card-box bg-white">
  <div class="d-flex flex-column review-grid">
    <div class="d-flex card-grid justify-content-between align-items-center">
      <%= link_to user_path(user), :action => 'go' do %>
        <% if user.photo.key %>
          <%= cl_image_tag user.photo.key, crop: :thumb, class: "rounded-circle avatar" %>
        <% else %>
          <%= image_tag "avatar.svg", alt: "user", width: 40, class: "avatar" %>
        <% end %>
      <% end %>
      <div class="flex-grow-1">
        <p class="m-0"><strong><%= link_to user_path(user), :action => 'go' do %><%= user.first_name %> <%= user.last_name %><% end %></strong></p>
        <small><%= review.created_at.strftime("%b %e, %Y") %></small>
      </div>
      <div>
        <%= render "shared/stars", average_rating: review.rating %>
      </div>
    </div>
    <div class="comment">
      <small><%= review.content %></small>
    </div>
  </div>
</div>
